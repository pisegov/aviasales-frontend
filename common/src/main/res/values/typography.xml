<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="AppText.SemiboldTitle">
        <item name="fontFamily">@font/sf_pro_display_semibold</item>
    </style>

    <style name="AppText.MediumTitle">
        <item name="fontFamily">@font/sf_pro_display_medium</item>
    </style>

    <style name="AppText.RegularText">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <style name="AppText.SemiboldTitle.Title_1">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="AppText.SemiboldTitle.Title_2">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppText.SemiboldTitle.Title_3">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppText.MediumTitle.Title_4">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppText.MediumTitle.Title_4.Italic">
        <item name="fontFamily">@font/sf_pro_display_mediumitalic</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="AppText.RegularText.Text_1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppText.RegularText.Text_2">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonText_1" parent="AppText.SemiboldTitle.Title_3"/>

    <style name="ButtonText_1.Italic" parent="AppText.SemiboldTitle.Title_3">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="AppText.RegularText.Tab_text">
        <item name="android:textSize">10sp</item>
    </style>

</resources>
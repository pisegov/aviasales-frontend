<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RoundedCornersImage">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="RoundedCornersImage.Small">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Pipka">
        <item name="cornerSize">3dp</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

    <style name="SearchEditText" parent="ButtonText_1">
        <item name="android:layout_marginStart">3.25dp</item>
        <item name="android:background">@null</item>
        <item name="android:digits">@string/cyrillic_symbols</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColorHint">@color/search_hint_color</item>
    </style>

    <style name="CarouselButton" parent="AppText.MediumTitle.Title_4.Italic">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/carousel_button_background</item>item>
    </style>
</resources>